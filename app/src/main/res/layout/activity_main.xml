<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#C1D6A9">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/palindromeId"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:onClick="palindrome"
                    android:text="Palindrome"
                    android:textAllCaps="false"
                    android:background="@drawable/corners"/>

                <Button
                    android:id="@+id/splitId"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:onClick="split"
                    android:text="Split"
                    android:textAllCaps="false"
                    android:background="@drawable/corners"/>

                <Button
                    android:id="@+id/notContainsId"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="Not Contains"
                    android:textAllCaps="false"
                    android:onClick="notContain"
                    android:background="@drawable/corners"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/isProperlyId"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:onClick="isProperlyFragment"
                    android:text="isProperly"
                    android:textAllCaps="false"
                    android:background="@drawable/corners"/>


                <Button
                    android:id="@+id/countVariantsId"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:onClick="countVariantsFragment"
                    android:text="Count Variants"
                    android:textAllCaps="false"
                    android:background="@drawable/corners"/>

                <Button
                    android:id="@+id/structureId"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:onClick="bigO"
                    android:text="O(1) Structure"
                    android:textAllCaps="false"
                    android:background="@drawable/corners"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:weightSum="2"
                android:background="#C1D6A9">

                <FrameLayout
                    android:id="@+id/fragmentId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/corners"
                    android:visibility="invisible"
                    android:layout_weight="1"
                    >

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fragment2Id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="#A2CA74"
                    android:visibility="invisible"></FrameLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>



